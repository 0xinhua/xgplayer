{
  "name": "xgplayer-hls-live",
  "version": "3.0.0-alpha.34",
  "description": "",
  "main": "lib/index.js",
  "module": "es/index.js",
  "browser": "dist/index.min.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:umd && npm run build:es && npm run build:lib",
    "build:umd": "cross-env NODE_ENV=production rollup -c rollup.config.js",
    "build:es": "babel src --out-dir es",
    "build:lib": "babel src --out-dir lib --presets=env",
    "watch": "cross-env NODE_ENV=development rollup -c rollup.config.js --watch",
    "watch:mobile": "cross-env NODE_ENV=development rollup -c ./rollup.config.mobile.js --watch"
  },
  "author": "",
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "chrome": 58,
            "ie": 10
          },
          "modules": false
        }
      ]
    ]
  },
  "license": "ISC",
  "dependencies": {
    "xgplayer-helper-codec": "file:../xgplayer-helper-codec",
    "xgplayer-helper-models": "file:../xgplayer-helper-models",
    "xgplayer-helper-transmuxers": "file:../xgplayer-helper-transmuxers",
    "xgplayer-helper-utils": "file:../xgplayer-helper-utils"
  }
}
