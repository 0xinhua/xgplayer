{
  "name": "xgplayer-hls",
  "version": "3.0.0-alpha.0",
  "description": "xgplayer plugin for hls",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "browser": "./dist/index.min.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build:umd && npm run build:es && npm run build:lib",
    "build:umd": "cross-env NODE_ENV=production rollup -c rollup.config.js",
    "build:es": "babel src --out-dir es",
    "build:lib": "babel src --out-dir lib --presets=es2015",
    "watch": "cross-env NODE_ENV=development rollup -c rollup.config.js --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bytedance/xgplayer.git"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ]
  },
  "keywords": [
    "mp4",
    "fmp4",
    "player",
    "video"
  ],
  "author": "yinguohui@bytedance.com",
  "license": "MIT",
  "dependencies": {
    "xgplayer-hls-live": "^3.0.0-alpha.0",
    "xgplayer-hls-vod": "^3.0.0-alpha.0"
  },
  "peerDependencies": {
    "xgplayer": "3.0.0-alpha.0"
  },
  "devDependencies": {
    "cross-env": "^6.0.3"
  }
}
