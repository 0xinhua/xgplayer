{
    "name": "xgplayer",
    "version": "3.0.0-alpha.65",
    "description": "video player",
    "main": "./dist/index.min.js",
    "module": "./es/index.js",
    "typings": "./types/index.d.ts",
    "bin": {
        "xgplayer": "bin/xgplayer.js"
    },
    "files": [
        "/lib",
        "/es",
        "/browser",
        "/dist",
        "/types"
    ],
    "scripts": {
        "postpublish": "git push --tags",
        "release:alpha": "npm version prerelease --preid=alpha && npm publish --tag alpha --registry=http://registry.npmjs.org",
        "release:alpha-test": "npm publish --tag alpha-test --registry=http://registry.npmjs.org",
        "release:3.0": "npm version patch && npm publish --tag 3.0 --registry=http://registry.npmjs.org",
        "prepare": "npm run build",
        "build": "npm run build:es && npm run build:lib && npm run build:main && npm run build:style && npm run build:browser",
        "build:main": "rm -rf ./dist && cross-env NODE_ENV=production rollup -c rollup.config.js",
        "build:browser": "rm -rf ./browser && node scripts/buildBrowser.js",
        "build:es": "rm -rf ./es && ../../node_modules/.bin/babel src --out-dir es",
        "build:lib": "rm -rf ./lib && ../../node_modules/.bin/babel src --out-dir lib --presets=es2015 --plugins=transform-class-properties",
        "build:style": "node scripts/buildStyles.js",
        "watch": "cross-env NODE_ENV=development rollup -c rollup.config.js --watch"
    },
    "unpkgFiles": [
        "browser",
        "dist"
    ],
    "keywords": [
        "video",
        "player"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bytedance/xgplayer.git"
    },
    "author": "yinguohui@bytedance.com",
    "license": "MIT",
    "browserslist": [
        "> 5%",
        "IE 9",
        "iOS 7",
        "Firefox > 20"
    ],
    "dependencies": {
        "babel-runtime": "^6.26.0",
        "danmu.js": "0.2.15",
        "deepmerge": "^1.5.0",
        "delegate-events": "^1.1.1",
        "downloadjs": "1.4.7",
        "event-emitter": "^0.3.5"
    },
    "devDependencies": {
        "babel-plugin-inline-svg": "^1.1.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-assign": "^6.22.0",
        "babel-plugin-transform-proto-to-assign": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "rollup-plugin-svg-import": "^1.5.1"
    }
}
