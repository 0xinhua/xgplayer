{
    "name": "xgplayer",
    "version": "3.0.0-alpha.28",
    "description": "video player",
    "main": "./dist/index.min.js",
    "module": "./es/index.min.js",
    "typings": "./types/index.d.ts",
    "bin": {
        "xgplayer": "bin/xgplayer.js"
    },
    "scripts": {
        "prepublishOnly": "npm run build",
        "release:alpha": "npm version prerelease --preid=alpha && npm publish --tag alpha",
        "release:alpha-test": "npm publish --tag alpha-test",
        "release:3.0": "npm version patch && npm publish --tag 3.0",
        "build": "npm run build:es && npm run build:lib && npm run build:main && npm run build:style && npm run build:browser",
        "build:main": "rm -rf ./dist && cross-env NODE_ENV=production rollup -c rollup.config.js",
        "build:browser": "rm -rf ./browser && node scripts/buildBrowser.js",
        "build:es": "rm -rf ./es && babel src --out-dir es",
        "build:lib": "rm -rf ./lib && babel src --out-dir lib --presets=es2015",
        "build:style": "node scripts/buildStyles.js",
        "watch": "cross-env NODE_ENV=development rollup -c rollup.config.js --watch & npm run build:style"
    },
    "keywords": [
        "video",
        "player"
    ],
    "babel": {
        "presets": [
            [
                "env",
                {
                    "targets": {
                        "chrome": 58,
                        "ie": 10
                    },
                    "modules": false,
                    "useBuiltIns": "usage",
                    "corejs": 3
                }
            ]
        ],
        "plugins": [
            "inline-svg"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bytedance/xgplayer.git"
    },
    "author": "yinguohui@bytedance.com",
    "license": "MIT",
    "browserslist": [
        "> 5%",
        "IE 9",
        "iOS 7",
        "Firefox > 20"
    ],
    "dependencies": {
        "babel-plugin-inline-svg": "^1.0.1",
        "danmu.js": "^0.2.15",
        "deepmerge": "^1.5.0",
        "delegate-events": "^1.1.1",
        "downloadjs": "1.4.7",
        "event-emitter": "^0.3.5",
        "event-emitter3": "^1.0.4"
    },
    "devDependencies": {
        "cross-env": "^7.0.2",
        "recursive-readdir": "^2.2.2"
    }
}
