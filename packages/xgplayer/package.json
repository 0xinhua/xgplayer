{
    "name": "xgplayer",
    "version": "3.0.0-alpha.3",
    "description": "video player",
    "main": "./dist/index.min.js",
    "module": "./es/index.min.js",
    "typings": "./types/index.d.ts",
    "bin": {
        "xgplayer": "bin/xgplayer.js"
    },
    "scripts": {
        "prepare": "npm run build",
        "build": "npm run build:es && npm run build:lib && npm run build:main && npm run build:style",
        "build:main": "cross-env NODE_ENV=production rollup -c rollup.config.js",
        "build:es": "babel src --out-dir es",
        "build:lib": "babel src --out-dir lib --presets=es2015",
        "build:style": "node scripts/buildStyles.js",
        "watch": "cross-env NODE_ENV=development rollup -c rollup.config.js --watch"
    },
    "keywords": [
        "video",
        "player"
    ],
    "babel": {
        "presets": [
            [
                "env",
                {
                    "targets": {
                        "chrome": 58,
                        "ie": 10
                    },
                    "modules": false,
                    "useBuiltIns": "usage",
                    "corejs": 3
                }
            ]
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bytedance/xgplayer.git"
    },
    "author": "yinguohui@bytedance.com",
    "license": "MIT",
    "browserslist": [
        "> 5%",
        "IE 9",
        "iOS 7",
        "Firefox > 20"
    ],
    "dependencies": {
        "danmu.js": "0.1.0",
        "deepmerge": "^1.5.0",
        "delegate-events": "^1.1.1",
        "downloadjs": "1.4.7",
        "event-emitter": "^0.3.5"
    },
    "devDependencies": {
        "http-server": "^0.12.0",
        "cross-env": "^6.0.3",
        "autoprefixer": "^9.7.4",
        "cssnano": "^4.1.10",
        "node-sass": "^4.13.1",
        "postcss": "^7.0.26",
        "recursive-readdir": "^2.2.2",
        "request-frame": "^1.5.3",
        "rollup": "^1.27.14",
        "rollup-plugin-uglify-es": "^0.0.1"
    }
}
